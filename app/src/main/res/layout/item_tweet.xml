<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#E1E8ED">

    <ImageView
        android:transitionName="profile"
        android:id="@+id/ivProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvName"
        android:textSize="16sp"
        tools:text="@JanviShah" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvScreenName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/ivProfile"
        android:autoLink="all"
        tools:text="this is my tweet!" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/ivProfile"
        android:text="Janvi Shah"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Janvi Shah" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/tvScreenName"
        android:gravity="right"
        android:text="3m"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ivEntity"
        android:layout_width="115dp"
        android:layout_height="66dp"
        android:layout_below="@+id/tvBody"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/btnReply"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/ivEntity"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="0dp"
        android:background="#DFE8EE"
        android:src="@drawable/ic_vector_compose_dm" />

    <ImageButton
        android:id="@+id/btnHeart"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/ivEntity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#DFE8EE"
        app:srcCompat="@drawable/ic_vector_heart_stroke" />

    <ImageButton
        android:id="@+id/btnRetweetMain"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivEntity"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="18dp"
        android:background="#DFE8EE"
        app:srcCompat="@drawable/ic_vector_retweet_stroke" />

    <TextView
        android:id="@+id/tvNumLiked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivEntity"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/btnHeart"
        android:textSize="16sp"
        tools:text="150" />

    <TextView
        android:id="@+id/tvNumRetweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivEntity"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/btnRetweetMain"
        android:textSize="16sp"
        tools:text="100" />

</RelativeLayout>